// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Flow {
  id        String   @id @default(uuid())
  name      String
  timeStamp DateTime
  block     Block[]
}

model Block {
  id            String   @id @default(uuid())
  name          String
  timeStamp     DateTime
  option        Option[]
  Flow          Flow?    @relation(fields: [flowId], references: [id])
  flowId        String?
  nextBlockId   String?  @unique
  nextBlocks    Block[]  @relation("BlockList")
  previousBlock Block?   @relation("BlockList", fields: [nextBlockId], references: [id])
}

model Option {
  id        String   @id @default(uuid())
  name      String
  content   String
  timeStamp DateTime
  Block     Block?   @relation(fields: [blockId], references: [id])
  blockId   String?
}
